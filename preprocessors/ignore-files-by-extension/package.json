{
  "name": "ignore-files-by-extension",
  "version": "0.0.0",
  "description": "TODO: add your description here!",
  "main": "lib/index.js",
  "scripts": {
    "dev": "nodemon test.js seeance-test-repos presentme --serve",
    "test": "nodemon test.js seeance-test-repos presentme"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "seeance-analysis-core": "^0.5.7",
    "simple-git": "^2.8.0"
  },
  "seeance": {
    "depends_on": [
      "blame",
      "commits",
      "files"
    ],
    "produces": [
      "blame",
      "commits",
      "files"
    ],
    "config_schema": {
      "extensions": {
        "type": "array",
        "description": "Ignore extensions",
        "default": [
          "jpg",
          "mp4",
          "wav",
          "docx"
        ],
        "items": {
          "type": "string"
        }
      },
      "name_contains": {
        "type": "array",
        "description": "Ignore filenames containing",
        "default": [
          "package-lock"
        ],
        "items": {
          "type": "string"
        }
      },
      "within_path": {
        "type": "array",
        "description": "Ignore files by path",
        "default": [
          "node_modules"
        ],
        "items": {
          "type": "string"
        }
      }
    },
    "type": "preprocessor"
  }
}
